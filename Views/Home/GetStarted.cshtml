    <!--Step 2 - Name your database -->
    <div class="StepSection" id="nameDB">
        <h1>Name your database/project</h1>
        <label>Move to next step if you do not want to create a name. The system will use the autogenerated value below</label>
        <div class="form-group">
            <input id="dbNameText" asp-for="DatabaseName" class="form-control" type="text" />
            <span asp-validation-for="DatabaseName" class="text-danger"></span>
        </div>
    </div>

    <!--Step 4 - How many tables-->
    <div class="StepSection">
        <h1>How many tables are in your database</h1>
        <div class="form-group">
            <input asp-for="NumberOfTables" class="form-control" />
            <span asp-validation-for="NumberOfTables" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" value="Continue"/>
    <input type="button" value="Back" onclick="history.back()">
</form>
