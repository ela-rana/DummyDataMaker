@model DummyDataMaker.Models.GeneratedDatabase

@{
    ViewData["Title"] = "Get Started";
}
<script>
    function setDefaultDBName(){
        let d = new Date();
        let currentDateTime = "Created" + d.getFullYear().toString() + d.getMonth().toString() +
            d.getDate().toString() + "at" + d.getHours().toString() + d.getMinutes().toString();
        document.getElementById('dbNameText').value = currentDateTime;
    }
</script>

<style>
    .StepSection {
        width: 95%;
        background-color: #72ddf7;
        padding: 20px;
        margin: 10px;
        border-radius: 15px;
    }
</style>

<title>Start Creating Dummy Data</title>

<body onload="setDefaultDBName()">

    <form asp-action="GetStarted">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!--Step 1 - Choose Dummy Data Type -->
        <div class="StepSection">
            <h1>Choose Dummy Data Type</h1>
            Select what type of data you want to generate.<br />
            <label>Check all that apply and then click create:</label>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GenerateSQL" />
                    SQL Query
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GenerateCSharp" />
                    C# Code
                </label>
            </div>
        </div>

        <!--Step 2 - Name your database -->
        <div class="StepSection" id="nameDB">
            <h1>Name your database/project</h1>
            <label>
                Move to next step if you do not want to create a name. 
                The system will use the autogenerated value below:
            </label>
            <div class="form-group">
                <input id="dbNameText" asp-for="DatabaseName" class="form-control" type="text" />
                <span asp-validation-for="DatabaseName" class="text-danger"></span>
            </div>
        </div>

        <input type="submit" value="Continue"/>
    </form>

    <input type="button" value="Back" onclick="history.back()">

</body>